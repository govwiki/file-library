{
    "name": "govwiki/govwiki-file-library",
    "description": "GovWiki pdf viewer",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Dmitriy Shemin",
            "email": "dmitriy.shemin@sibers.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": ">= 7.0",
        "ext-pdo": "*",
        "beberlei/assert": "^2.9",
        "bryanjhv/slim-session": "^3.5",
        "robmorgan/phinx": "^0.9.2",
        "slim/php-view": "^2.2",
        "slim/slim": "^3.9",
        "sllh/composer-versions-check": "^2.0",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "~2.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^2.8",
        "vimeo/psalm": "^1.0"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.0"
        }
    },
    "scripts": {
        "check:psalm": "psalm --find-dead-code --no-cache",
        "check:cs": "phpcs",
        "check:md": "phpmd ./src text phpmd.xml",
        "check": [
            "@check:psalm",
            "@check:cs",
            "@check:md"
        ],
        "test:unit": "phpunit --color=always",
        "test": [
            "@test:unit"
        ]
    }
}
