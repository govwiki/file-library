{
    "name": "govwiki/govwiki-file-library",
    "description": "GovWiki pdf viewer",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Dmitriy Shemin",
            "email": "dmitriy.shemin@sibers.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">= 7.0",
        "ext-pdo": "*",
        "beberlei/assert": "^2.9",
        "bryanjhv/slim-session": "^3.5",
        "cocur/slugify": "^3.1",
        "doctrine/data-fixtures": "^1.2",
        "doctrine/migrations": "^1.5",
        "doctrine/orm": "^2.5",
        "fzaninotto/faker": "^1.7",
        "microsoft/azure-storage-file": "^1.1",
        "mkraemer/react-pcntl": "^3.0",
        "monolog/monolog": "^1.23",
        "react/event-loop": "^0.4",
        "react/stream": "^0.7.7",
        "sabre/dav": "^3.2",
        "slim/slim": "^3.9",
        "slim/twig-view": "^2.3",
        "sllh/composer-versions-check": "^2.0",
        "symfony/console": "^3.3",
        "symfony/lock": "3.4.11",
        "symfony/process": "^3.4",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.2",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.2",
        "vimeo/psalm": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check:psalm": "psalm --find-dead-code --no-cache",
        "check:cs": "phpcs",
        "check:md": "phpmd ./src text phpmd.xml",
        "check": [
            "@check:psalm",
            "@check:cs",
            "@check:md"
        ],
        "test:unit": "phpunit --color=always",
        "test": [
            "@test:unit"
        ],
        "migrate": "phinx migrate",
        "fixtures": "phinx seed:run -s PurgeFixtures -s UserFixtures -s DocumentFixtures"
    }
}
