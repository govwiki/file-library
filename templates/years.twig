{% extends 'layout.twig' %}

{% block main %}
    <h1>CAFRS and Single Audits for US Governments and Non-Profits</h1>

    <table class="sortable">
        <thead>
            <tr>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            {%- for year in years -%}
                <tr class="dir">
                    <td>
                        <a href="{{- path_for('documents', {
                            type:  type,
                            state: state,
                            year:  year
                        }) -}}">
                            {{- year -}}
                        </a>
                    </td>
                </tr>
            {%- endfor -%}
        </tbody>
    </table>
{% endblock main %}